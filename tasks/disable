#!/usr/bin/env bash

function run() {
  local addin_name=$(potato_get_arg 1)
  [ -z "$addin_name" ] && echo "[ERROR] potato remove [addin_name]"
  local addin_path=$HOME/.potato/enabled/$addin_name.bashrc
  [ ! -f "$addin_path" ] && echo "[INFO] Addin not enabled."
  rm $addin_path
}
function __autocomplete() {
  ls $HOME/.potato/enabled | sed 's/.bashrc//'
}
