#!/usr/bin/env bash

function run() {
  local task=$(potato_get_arg 1)
  [ -z "$task" ] && task=$(potato_get_task)
  potato_load_task $task
  __help
}
function __help() {
  local -a tasks=( $(potato_tasks_list) )
  echo '__ Available tasks:'
  printf "|_ %s\n" ${tasks[@]}
}
function __autocomplete() {
  ls $POTATO_ROOT/tasks
}
